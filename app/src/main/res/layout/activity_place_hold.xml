<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.csumb.mcrae.bookreservation.PlaceHold">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/pickUpDate"
        android:hint="Pick Up Date"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/pickUpTime"
        android:hint="Pick Up Time"
        android:layout_below="@+id/pickUpDate"
        android:layout_alignLeft="@+id/pickUpDate"
        android:layout_alignStart="@+id/pickUpDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dropOffDate"
        android:hint="Drop Off Date"
        android:layout_below="@+id/pickUpTime"
        android:layout_alignLeft="@+id/pickUpTime"
        android:layout_alignStart="@+id/pickUpTime"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/dropOffTime"
        android:layout_below="@+id/dropOffDate"
        android:layout_alignLeft="@+id/dropOffDate"
        android:layout_alignStart="@+id/dropOffDate"
        android:hint="Drop Off Time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place A Hold"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Use Military Time. Please input Dates in this format:\nMM/dd/yy\nPlease input times in this format:\nHH/mm"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:background="@color/accent_material_dark" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/placeHoldSubmit"
        android:layout_below="@+id/dropOffTime"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
